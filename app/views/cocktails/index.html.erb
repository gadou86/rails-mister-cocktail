<p id="notice" style="color: green" text-cener><%= notice %></p>
<%# <div class="banner">

  </div> %>
<div class="header">
  <div class="text-center p-3">
    <h1 class="text-center p-3">Cocktail <span>Cocktails</span> </h1>
    <%# <h2>Cocktails</h2> %>
  </div>
</div>



<div class="container">

  <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <% if cocktail.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, crop: :fill %>')">
            <p><%= link_to cocktail.name, cocktail_path(cocktail)  %></p>
          </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/dinner.jpg)">
            Dinner
          </div>
            <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_cocktail"></i>
          <% end %>

        <% end %>
       <% end %>
    </div>
</div>
